<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.Reservation">
   <center>
      <AnchorPane prefHeight="391.0" prefWidth="488.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="391.0" fitWidth="489.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../Downloads/55.jpg" />
               </image>
            </ImageView>
            <Label fx:id="validSeats" alignment="TOP_LEFT" layoutX="12.0" layoutY="199.0" prefHeight="185.0" prefWidth="471.0">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button layoutX="363.0" layoutY="73.0" mnemonicParsing="false" onAction="#viewSeats" prefHeight="25.0" prefWidth="112.0" text="Available Seats" textFill="#070707">
               <effect>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant color="#f8d4d4" />
                     </light>
                  </Lighting>
               </effect>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label layoutX="36.0" prefHeight="17.0" prefWidth="353.0" text="                  Seat Reservation" textAlignment="CENTER" textFill="#ff40f2">
               <font>
                  <Font name="System Bold Italic" size="26.0" />
               </font>
               <effect>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect>
            </Label>
            <Label layoutY="73.0" prefHeight="25.0" prefWidth="131.0" text="Enter Seat No :" textFill="#fffef6">
